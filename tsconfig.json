{
  "extends": "./.nuxt/tsconfig.json",
 "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["jest", "@types/jest"],
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*", 
    "tests/**/*",
  ]
}